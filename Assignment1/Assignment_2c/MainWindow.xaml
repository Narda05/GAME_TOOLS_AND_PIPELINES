<Window x:Class="Assignment_2c.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2c"
        mc:Ignorable="d"
        Title="Weapons Editor" Height="700" Width="500" Background="#FFEEEEEE">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="70"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--Button Grid-->
        <Rectangle Grid.Row="0" Fill="#FFEEEEEE" />
        <Grid Grid.Row="0">
            <Button x:Name="LoadClicked" Content="Load" HorizontalAlignment="Left" Margin="17,0,0,0" VerticalAlignment="Center" Width="100" Height="30" Click="LoadClicked_Click" FontFamily="Agency FB" Background="#FFD6D6D6" BorderBrush="#FFD6D6D6" FontSize="22" />
            <Button x:Name="SaveClicked" Content="Save" HorizontalAlignment="Left" Margin="140,0,0,0" VerticalAlignment="Center" Width="100" Height="30" Click="SaveClicked_Click" Background="#FFD6D6D6" BorderBrush="#FFD6D6D6" FontFamily="Agency FB" FontSize="22" />

        </Grid>
        <!--Sort Grid-->
        <Rectangle Grid.Row="1" Fill="#FFEEEEEE" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!-- Column to "Sort by:" -->
                <ColumnDefinition Width="Auto"/>
                <!-- Column to RadioButtons -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="20,1,5,5" FontFamily="Agency FB" FontSize="18"/>

            <!-- First rode -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                <RadioButton Content="Name" Margin="50,5,5,5" Checked="RadioButton_Checked" FontFamily="Agency FB"/>
                <RadioButton Content="BaseAttack" Margin="15,5,6,5" Checked="RadioButton_Checked" FontFamily="Agency FB"/>
                <RadioButton Content="Rarity" Margin="30,5,5,5" Checked="RadioButton_Checked" FontFamily="Agency FB"/>
            </StackPanel>
            <!-- Second Rode -->
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                <RadioButton Content="Passive" Margin="50,5,5,5" Checked="RadioButton_Checked" FontFamily="Agency FB"/>
                <RadioButton Content="SecondaryStat" Margin="5" Checked="RadioButton_Checked" FontFamily="Agency FB"/>
            </StackPanel>
        </Grid>

        <!--Filter by name Grid-->
        <Rectangle Grid.Row="2" Fill="#FFEEEEEE" />
        <Grid Grid.Row="2" Margin="0,10,0,10" HorizontalAlignment="Center" Width="480">
            <Grid.ColumnDefinitions>
                <!-- Izquierda -->
                <ColumnDefinition Width="4*"/>
                <!-- Derecha -->
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- ================= LEFT SIDE ================= -->
            <Grid Grid.Column="0" Margin="0,0,33,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Show only type -->
                    <RowDefinition Height="Auto"/>
                    <!-- Filter by name -->
                    <RowDefinition Height="*"/>
                    <!-- List -->
                </Grid.RowDefinitions>

                <!-- SHOW ONLY TYPE -->
                <Grid Grid.Row="0" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Show only type:" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Agency FB" FontSize="18"/>

                    <ComboBox x:Name="FilterTypeComboBox" Grid.Column="1" Height="25" SelectionChanged="ShowOnlyType_SelectionChanged" FontFamily="Agency FB" FontSize="18" BorderBrush="#FFFAFAFA" Foreground="Black">
                        <ComboBox.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFF0F0F0"/>
                                <GradientStop Color="#FFFAFAFA" Offset="1"/>
                            </LinearGradientBrush>
                        </ComboBox.Background>
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Sword"/>
                        <ComboBoxItem Content="Bow"/>
                        <ComboBoxItem Content="Claymore"/>
                    </ComboBox>
                </Grid>

                <!-- FILTER BY NAME -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Filter by name:" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Agency FB" FontSize="18"/>

                    <TextBox x:Name="FilterNameTextBox" Grid.Column="1" Height="25" Margin="8,0,0,0" TextChanged="FilterNameText_TextChanged" FontFamily="Agency FB" FontSize="18"/>
                </Grid>

                <!-- LIST -->
                <ListBox x:Name="WeaponListBox" Grid.Row="2" Margin="5"/>
            </Grid>

            <!-- ================= RIGHT SIDE BUTTONS ================= -->
            <Grid Margin="365,0,-1,0" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="AddClicked" Content="Add" Width="100" Height="30" Margin="5" Click="AddClicked_Click" Background="#FFD6D6D6" BorderBrush="#FFD6D6D6" FontFamily="Agency FB" FontSize="22"/>
                <Button x:Name="EditClicked" Grid.Row="1" Content="Edit" Width="100" Height="30" Margin="5" Click="EditClicked_Click" Background="#FFD6D6D6" BorderBrush="#FFD6D6D6" FontFamily="Agency FB" FontSize="22"/>
                <Button x:Name="RemoveClicked" Grid.Row="2" Content="Remove" Width="100" Height="30" Margin="5" Click="RemoveClicked_Click" Background="#FFD6D6D6" BorderBrush="#FFD6D6D6" FontFamily="Agency FB" FontSize="22"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
